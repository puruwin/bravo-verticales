---
import data from "../data.json";

export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Empresa de trabajos verticales con cuerda en la Costa Blanca. Rehabilitación de fachadas, limpieza y reparaciones sin andamios. De Calpe a Alicante con total seguridad.",
} = Astro.props;

const { contacto } = data;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <!-- SEO and additional meta tags -->
  </head><fragment slot="head">
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Bravo Trabajos Verticales" />
    <meta
      name="keywords"
      content="trabajos verticales con cuerda, Costa Blanca, rehabilitación fachadas, limpieza patios luces, sistemas antiaves, reparaciones altura, Calpe, Alicante, sin andamios"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://bravotrabajosverticales.com/" />
    <meta
      property="og:title"
      content="Trabajos Verticales con Cuerda en la Costa Blanca - Bravo Trabajos Verticales"
    />
    <meta
      property="og:description"
      content="Empresa de trabajos verticales con cuerda en la Costa Blanca. Rehabilitación de fachadas, limpieza y reparaciones sin andamios. De Calpe a Alicante."
    />
    <meta
      property="og:image"
      content="https://bravotrabajosverticales.com/og-image.jpg"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta
      property="twitter:url"
      content="https://bravotrabajosverticales.com/"
    />
    <meta
      property="twitter:title"
      content="Trabajos Verticales con Cuerda en la Costa Blanca - Bravo Trabajos Verticales"
    />
    <meta
      property="twitter:description"
      content="Empresa de trabajos verticales con cuerda en la Costa Blanca. Rehabilitación de fachadas, limpieza y reparaciones sin andamios. De Calpe a Alicante."
    />
    <meta
      property="twitter:image"
      content="https://bravotrabajosverticales.com/og-image.jpg"
    />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://bravotrabajosverticales.com/" />

    <!-- Theme color for mobile browsers -->
    <meta name="theme-color" content="#2F45AF" />
    <meta name="msapplication-TileColor" content="#2F45AF" />
  </fragment>

  <!-- Schema.org markup for local business -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Bravo Trabajos Verticales",
      "description": "Empresa de trabajos verticales con cuerda en la Costa Blanca. Rehabilitación de fachadas, limpieza y reparaciones sin andamios",
      "url": "https://bravotrabajosverticales.com",
      "telephone": {contacto.telefono_principal},
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Dirección de la empresa",
        "addressLocality": "Ciudad",
        "addressRegion": "Región",
        "postalCode": "Código Postal",
        "addressCountry": "ES"
      },
      "openingHours": "Mo-Fr 08:00-18:00",
      "priceRange": "$$"
    }
  </script>

  <body class="font-sans antialiased">
    <slot />
    
    <!-- Contact Modal -->
    <div id="contact-modal-container"></div>
  </body>

</html>
