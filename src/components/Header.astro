---
import data from "../data.json";

const { empresa } = data;

// Check if we're on the privacy policy page
const isPrivacyPage = Astro.url.pathname === "/politica-de-privacidad";
---

<header class="bg-white shadow-lg sticky top-0 z-50">
  <nav class={`${isPrivacyPage ? 'max-w-4xl' : 'max-w-6xl'} mx-auto px-4 sm:px-6 lg:px-8`}>
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold text-primary">
          <img src="/logo.svg" alt={empresa.nombre} class="w-20" />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          {
            !isPrivacyPage && (
              <>
                <a
                  href="#servicios"
                  class="text-gray-700 hover:text-primary px-3 py-2 text-sm font-medium transition-colors"
                >
                  Servicios
                </a>
                <a
                  href="#proyectos"
                  class="text-gray-700 hover:text-primary px-3 py-2 text-sm font-medium transition-colors"
                >
                  Proyectos
                </a>
                <a
                  href="#nosotros"
                  class="text-gray-700 hover:text-primary px-3 py-2 text-sm font-medium transition-colors"
                >
                  Nosotros
                </a>
                <a
                  href="#contacto"
                  class="text-gray-700 hover:text-primary px-3 py-2 text-sm font-medium transition-colors"
                >
                  Contacto
                </a>
              </>
            )
          }
          <button
            id="header-cta-desktop"
            class="bg-secondary text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-yellow-500 transition-colors"
            tabindex="0"
            aria-label="Pedir presupuesto"
          >
            Pedir presupuesto
          </button>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="mobile-menu-button bg-gray-100 inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-primary hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Abrir men√∫ principal</span>
          <!-- Hamburger icon -->
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t">
        {
          !isPrivacyPage && (
            <>
              <a
                href="#servicios"
                class="text-gray-700 hover:text-primary block px-3 py-2 text-base font-medium"
              >
                Servicios
              </a>
              <a
                href="#proyectos"
                class="text-gray-700 hover:text-primary block px-3 py-2 text-base font-medium"
              >
                Proyectos
              </a>
              <a
                href="#nosotros"
                class="text-gray-700 hover:text-primary block px-3 py-2 text-base font-medium"
              >
                Nosotros
              </a>
              <a
                href="#contacto"
                class="text-gray-700 hover:text-primary block px-3 py-2 text-base font-medium"
              >
                Contacto
              </a>
            </>
          )
        }
        <button
          id="header-cta-mobile"
          class="bg-secondary text-white block px-3 py-2 text-base font-medium rounded-md w-full text-left"
          tabindex="0"
          aria-label="Cotizar ahora"
        >
          Cotizar Ahora
        </button>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle functionality
  const mobileMenuButton = document.querySelector(".mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  const handleMobileMenuToggle = () => {
    if (mobileMenu) {
      mobileMenu.classList.toggle("hidden");
    }
  };

  if (mobileMenuButton) {
    mobileMenuButton.addEventListener("click", handleMobileMenuToggle);
  }

  // Open modal for CTA buttons
  const handleCtaClick = () => {
    if (typeof (window as any).openContactModal === "function") {
      (window as any).openContactModal();
    }
    // Close mobile menu if open
    if (mobileMenu && !mobileMenu.classList.contains("hidden")) {
      mobileMenu.classList.add("hidden");
    }
  };

  // Desktop CTA
  const desktopCtaButton = document.getElementById("header-cta-desktop");
  if (desktopCtaButton) {
    desktopCtaButton.addEventListener("click", handleCtaClick);
    desktopCtaButton.addEventListener("keydown", (e: KeyboardEvent) => {
      if (e.key === "Enter" || e.key === " ") {
        e.preventDefault();
        handleCtaClick();
      }
    });
  }

  // Mobile CTA
  const mobileCtaButton = document.getElementById("header-cta-mobile");
  if (mobileCtaButton) {
    mobileCtaButton.addEventListener("click", handleCtaClick);
    mobileCtaButton.addEventListener("keydown", (e: KeyboardEvent) => {
      if (e.key === "Enter" || e.key === " ") {
        e.preventDefault();
        handleCtaClick();
      }
    });
  }
</script>
