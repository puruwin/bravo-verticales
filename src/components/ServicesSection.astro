---
import data from "../data.json";

const { empresa, servicios } = data;

// Mapeo de servicios con sus imágenes correspondientes
const serviciosConImagenes = [
  {
    ...servicios[0], // Pintura y rehabilitación de fachadas
    imagen: "/img/reparacion_fach.webp",
    icono: "paint"
  },
  {
    ...servicios[1], // Limpieza de patios de luces
    imagen: "/img/patio_luces_1.webp",
    icono: "clean"
  },
  {
    ...servicios[2], // Sistemas antiaves
    imagen: "/img/red_seguridad_1.webp",
    icono: "security"
  },
  {
    ...servicios[3], // Reparaciones y mantenimiento
    imagen: "/img/reparacion_fach_3.webp",
    icono: "repair"
  }
];
---

<section id="servicios" class="bg-gray-50 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-primary mb-4">
        Servicios de {empresa.nombre}
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Una amplia variedad de servicios en altura adaptados a las necesidades
        de cada edificio en {empresa.ubicacion.base}
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
      {
        serviciosConImagenes.map((servicio) => (
          <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden group">
            <!-- Service Image -->
            <div class="relative h-48 overflow-hidden">
              <img
                src={servicio.imagen}
                alt={servicio.nombre}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-primary/20 group-hover:bg-primary/10 transition-colors duration-300"></div>
            </div>
            
            <!-- Service Content -->
            <div class="p-6">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                  {servicio.icono === "paint" && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
                    </svg>
                  )}
                  {servicio.icono === "clean" && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                    </svg>
                  )}
                  {servicio.icono === "security" && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                    </svg>
                  )}
                  {servicio.icono === "repair" && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  )}
                </div>
                <h3 class="text-xl font-bold text-primary">
                  {servicio.nombre}
                </h3>
              </div>
              <p class="text-gray-600 mb-4 leading-relaxed">{servicio.descripcion}</p>
              <a
                href="#contacto"
                class="inline-flex items-center text-secondary hover:text-yellow-600 font-semibold transition-colors"
              >
                Saber Más
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Call to Action -->
    <div class="text-center">
      <button
        id="services-cta"
        class="inline-block bg-primary text-white px-8 py-4 text-lg font-semibold rounded-lg hover:bg-blue-700 transform hover:scale-105 transition-all duration-300 shadow-lg"
        tabindex="0"
        aria-label="Solicitar presupuesto gratuito"
      >
        Solicitar Presupuesto Gratuito
      </button>
    </div>
  </div>
</section>

<script>
  // Open modal for CTA button
  const handleCtaClick = () => {
    if (typeof (window as any).openContactModal === 'function') {
      (window as any).openContactModal();
    }
  };

  const ctaButton = document.getElementById('services-cta');
  if (ctaButton) {
    ctaButton.addEventListener("click", handleCtaClick);
    ctaButton.addEventListener("keydown", (e: KeyboardEvent) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        handleCtaClick();
      }
    });
  }
</script>
