---
import data from "../data.json";

const { empresa } = data;
---

<section
  class="relative h-screen flex items-center justify-center overflow-hidden"
>
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <div
      class="absolute inset-0 bg-gradient-to-r from-primary/80 to-primary/60 z-10"
    >
    </div>
    <!-- Placeholder for background image - replace with actual image -->
    <div
      class="w-full h-full bg-gradient-to-br from-slate-800 via-slate-700 to-slate-900 flex items-center justify-center"
    >
      <div class="text-center text-white/20">
        <svg
          class="w-32 h-32 mx-auto mb-4"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
          ></path>
        </svg>
        <p class="text-lg">Imagen de trabajos verticales profesionales</p>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div
    class="relative z-20 text-center text-white px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto"
  >
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
      {empresa.titulo_completo}
    </h1>

    <p class="text-xl sm:text-2xl text-gray-200 mb-8 max-w-3xl mx-auto">
      {empresa.descripcion_empresa}
    </p>

    <!-- Primary CTA Button -->
    <div class="mb-8">
      <a
        href="#cotizar"
        class="inline-block bg-secondary text-white px-8 py-4 text-lg font-semibold rounded-lg hover:bg-yellow-500 transform hover:scale-105 transition-all duration-300 shadow-lg"
        tabindex="0"
        aria-label="Obtener cotización gratuita hoy"
      >
        Obtén tu Cotización Gratuita Hoy
      </a>
    </div>

    <!-- Trust indicators -->
    <div
      class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-8 text-sm text-gray-300"
    >
      <div class="flex items-center">
        <svg
          class="w-5 h-5 text-green-400 mr-2"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            clip-rule="evenodd"></path>
        </svg>
        <span>Sin Andamios</span>
      </div>
      <div class="flex items-center">
        <svg
          class="w-5 h-5 text-green-400 mr-2"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            clip-rule="evenodd"></path>
        </svg>
        <span>Máxima Seguridad</span>
      </div>
      <div class="flex items-center">
        <svg
          class="w-5 h-5 text-green-400 mr-2"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            clip-rule="evenodd"></path>
        </svg>
        <span>Cumplimiento de Plazos</span>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20">
    <div class="animate-bounce">
      <svg
        class="w-6 h-6 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<script>
  // Smooth scroll for CTA button
  const handleCtaClick = (event: Event) => {
    event.preventDefault();
    const target = document.querySelector("#cotizar");
    if (target) {
      target.scrollIntoView({ behavior: "smooth" });
    }
  };

  const ctaButton = document.querySelector('a[href="#cotizar"]');
  if (ctaButton) {
    ctaButton.addEventListener("click", handleCtaClick);
  }
</script>
