---
import data from "../data.json";

const { empresa } = data;
---

<section
  class="relative h-screen flex items-center justify-center overflow-hidden"
>
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <div
      class="absolute inset-0 bg-gradient-to-r from-primary/85 to-primary/70 z-10"
    >
    </div>
    <!-- Real background image -->
    <div class="w-full h-full relative">
      <img
        src="/img/reparacion_fach.webp"
        alt="Trabajos verticales profesionales en fachadas"
        class="w-full h-full object-cover"
        loading="eager"
      />
    </div>
  </div>

  <!-- Content -->
  <div
    class="relative z-20 text-center text-white px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto"
  >
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
      {empresa.titulo_completo}
    </h1>

    <p class="text-xl sm:text-2xl text-gray-200 mb-8 max-w-3xl mx-auto">
      {empresa.descripcion_empresa}
    </p>

    <!-- Primary CTA Button -->
    <div class="mb-8">
      <button
        id="hero-cta"
        class="inline-block bg-secondary text-white px-8 py-4 text-lg font-semibold rounded-lg hover:bg-yellow-500 transform hover:scale-105 transition-all duration-300 shadow-lg"
        tabindex="0"
        aria-label="Obtener presupuesto gratuito hoy"
      >
        Obtén tu Presupuesto Gratis Hoy
      </button>
    </div>

    <!-- Trust indicators -->
    <div
      class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-8 text-sm text-gray-300"
    >
      <div class="flex items-center">
        <svg
          class="w-5 h-5 text-green-400 mr-2"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            clip-rule="evenodd"></path>
        </svg>
        <span>Sin Andamios</span>
      </div>
      <div class="flex items-center">
        <svg
          class="w-5 h-5 text-green-400 mr-2"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            clip-rule="evenodd"></path>
        </svg>
        <span>Máxima Seguridad</span>
      </div>
      <div class="flex items-center">
        <svg
          class="w-5 h-5 text-green-400 mr-2"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            clip-rule="evenodd"></path>
        </svg>
        <span>Cumplimiento de Plazos</span>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20">
    <div class="animate-bounce">
      <svg
        class="w-6 h-6 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<script>
  // Open modal for CTA button
  const handleCtaClick = () => {
    if (typeof (window as any).openContactModal === "function") {
      (window as any).openContactModal();
    }
  };

  const ctaButton = document.getElementById("hero-cta");
  if (ctaButton) {
    ctaButton.addEventListener("click", handleCtaClick);
    ctaButton.addEventListener("keydown", (e: KeyboardEvent) => {
      if (e.key === "Enter" || e.key === " ") {
        e.preventDefault();
        handleCtaClick();
      }
    });
  }
</script>
